{
  "scopeName": "source.ymd",
  "name": "YMD (YAML + Markdown) layered on YAML",
  "patterns": [
    {
      "name": "meta.embedded.block.markdown",
      "begin": "^(\\s*)([A-Za-z_][A-Za-z0-9_-]*)(:)\\s*\\|\\s*$",
      "beginCaptures": {
        "2": {
          "name": "entity.name.tag"
        },
        "3": {
          "name": "punctuation.separator.key-value.mapping"
        }
      },
      "end": "^(?=\\S)|^(\\s{0,})(?=[A-Za-z_][A-Za-z0-9_-]*\\s*:)",
      "patterns": [
        {
          "include": "#placeholders"
        },
        {
          "begin": "^(\\s{2,})",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.indent"
            }
          },
          "end": "^(?=\\S)|^(\\s{0,})(?=[A-Za-z_][A-Za-z0-9_-]*\\s*:)",
          "patterns": [
            {
              "include": "#placeholders"
            },
            {
              "include": "text.html.markdown"
            }
          ]
        }
      ]
    },
    {
      "include": "#placeholders"
    },
    {
      "include": "source.yaml"
    }
  ],
  "repository": {
    "placeholders": {
      "patterns": [
        {
          "name": "variable.other.placeholder.mustache.ymd",
          "match": "\\{\\{\\s*([A-Za-z_][A-Za-z0-9_\\.:-]*)\\s*\\}\\}",
          "captures": {
            "1": {
              "name": "entity.name.variable.mustache.ymd"
            }
          }
        }
      ]
    }
  }
}