{
  "scopeName": "source.ymd",
  "name": "YMD (YAML + Markdown + Jinja2) layered on YAML",
  "patterns": [
    {
      "name": "meta.embedded.block.markdown.ymd",
      "begin": "^(\\s*)([A-Za-z_][A-Za-z0-9_-]*)(:)\\s*\\|\\s*$",
      "beginCaptures": {
        "2": {
          "name": "entity.name.tag"
        },
        "3": {
          "name": "punctuation.separator.key-value.mapping"
        }
      },
      "end": "^(?=\\S)|^(\\s{0,})(?=[A-Za-z_][A-Za-z0-9_-]*\\s*:)",
      "contentName": "text.html.markdown",
      "patterns": [
        {
          "include": "source.jinja"
        },
        {
          "include": "text.html.markdown"
        }
      ]
    },
    {
      "include": "source.jinja"
    },
    {
      "include": "source.ymd.yaml"
    }
  ]
}